<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>

  <div class="field">
    <label for="book-title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book-body">Body</label>
    <%= f.text_area :body %>
  </div>
 
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
  <%= link_to "Show", "/books/#{@book.id}" %>
   | 
  <a href="/books">Back</a>
  
<% end %>